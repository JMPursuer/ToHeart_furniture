.form-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 40rpx;
  margin-top: 96rpx;
  background: #fff;
}

.tips {
  text-align: center;
  padding: 20rpx 0;
  color: blue;
  background: green;
}

.form-item {
  position: relative;
  background: #fff;
  height: 96rpx;
  border-bottom: 1px solid #d9d9d9;
  width: 620rpx;
  font-size: 32rpx;
  margin: auto;
}

.form-item .mobile,
.form-item .password,
.form-item .code {
  position: absolute;
  top: 26rpx;
  left: 0;
  display: block;
  width: 100%;
  height: 44rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
}

.form-item-code {
  margin-top: 32rpx;
  height: auto;
  overflow: hidden;
  width: 620rpx;
  display: flex;
  margin: auto;
}

.form-item-code .form-item {
  flex: 1;
}

.code {
  max-width: 400rpx;
}

.form-item-code .code-btn {
  display: flex;
  justify-items: center;
  align-items: center;
  color: #CF131B;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.form-item .clear {
  position: absolute;
  top: 32rpx;
  right: 18rpx;
  z-index: 2;
  display: block;
  background: #fff;
}

.reset-btn {
  margin-top: 60rpx;
  background: #CF131B;
  height: 88rpx;
  display: flex;
  justify-content: center;
  justify-items: center;
  border-radius: 8rpx;
  color: #fff;
  font-size: 36rpx;
  width: 620rpx;
}

.display {
  color: #d1d1d1 !important;
}