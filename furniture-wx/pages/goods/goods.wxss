.container {
  margin-bottom: 100rpx;
}

/* 轮播图 */
.goodsimgs {
  width: 750rpx;
  height: 600rpx;
}

.goodsimgs image {
  width: 750rpx;
  height: 600rpx;
}

.goods_info {
  background: #fff;
  padding-bottom: 40rpx;
}

/* 商品名称 */
.goods_name {
  background: #fff;
  padding: 30rpx;
  padding-bottom: 0;
}

.goods_name_left {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #333;
}

/* 商品价格 */
.price {
  padding: 18rpx 30rpx;
}

.price text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF3D3D;
}

.price .price_number {
  font-size: 38rpx;
  padding: 0 4rpx;
}

.goods_detail {
  background: #fff;
  margin-top: 30rpx;
  padding: 40rpx 0;
}

/* 商品参数 */
.goods-attr {
  width: 670rpx;
  margin: auto;
  border: 1rpx dashed #ddd;
}

.goods_detail .title {
  text-align: center;
  margin-bottom: 20rpx;
}

.goods_detail .title text {
  padding: 10rpx;
  display: inline-block;
  width: 380rpx;
  margin: auto;
  text-align: center;
  position: relative;
  font-weight: 600;
  font-size: 28rpx;
}

.goods_detail .title text::after,
.goods_detail .title text::before {
  content: "";
  display: block;
  width: 60rpx;
  height: 2rpx;
  background: #999;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
}

.goods_detail .title text::before {
  left: 12%;
}

.goods_detail .title text::after {
  right: 12%;
}

.goods_detail .list .item {
  display: flex;
  height: 60rpx;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.goods-attr .list .item:nth-child(odd) {
  background: #d3d3d3;
}

.goods-attr .list .item:last-child {
  border: none;
}

.goods-attr .list .item .left {
  flex: 1;
  padding-left: 60rpx;
}

.goods-attr .list .item .right {
  flex: 1;
}

.goods_detail_title {
  margin: 30rpx;
}

.issue-warp {
  padding: 0 40rpx;
}

.issue-warp .li {
  margin-bottom: 20rpx;
}

.issue-warp .li view {
  margin-top: 10rpx;
}

.li-title {
  font-size: 30rpx;
}

.li-content {
  font-size: 28rpx;
  text-indent: 40rpx;
}

/* 详情 */
.detail {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.detail image {
  width: 750rpx;
  display: block;
}

.bottom-btn {
  width: 750rpx;
  height: 100rpx;
  display: flex;
}

.bottom-btn-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  background: #fff;
}

.bottom-btn .l {
  float: left;
  height: 100rpx;
  width: 162rpx;
  border: 1px solid #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-btn .l.l-collect {
  border-right: none;
  border-left: none;
  text-align: center;
  width: 90rpx;
}

.bottom-btn .l.l-collect .icon {
  position: absolute;
  top: 28rpx;
  left: 20rpx;
  font-size: 44rpx;
}

.bottom-btn .l.l-kefu {
  position: relative;
  height: 54rpx;
  width: 63rpx;
}

.bottom-btn .l.l-cart .box {
  position: relative;
  height: 60rpx;
  width: 60rpx;
}

.bottom-btn .l.l-cart .cart-count {
  height: 28rpx;
  width: 28rpx;
  z-index: 10;
  position: absolute;
  top: 0;
  right: 0;
  background: #b4282d;
  text-align: center;
  font-size: 18rpx;
  color: #fff;
  line-height: 28rpx;
  border-radius: 50%;
}

.bottom-btn .l.l-cart .icon {
  position: absolute;
  top: 10rpx;
  left: 0;
  font-size: 44rpx;
}

.bottom-btn .c {
  float: left;
  background: #CF131B;
  height: 100rpx;
  line-height: 96rpx;
  flex: 1;
  text-align: center;
  color: #fff;
}

.bottom-btn .r {
  border: 1px solid #E8603A;
  background: #E8603A;
  float: left;
  height: 100rpx;
  line-height: 96rpx;
  flex: 1;
  text-align: center;
  color: #fff;
}

@import "../../lib/wxParse/wxParse.wxss";

.attr-pop-box {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 8;
  bottom: 0;
  /* display: none; */
}

.attr-pop {
  width: 100%;
  height: auto;
  background: #fff;
  position: fixed;
  z-index: 9;
  bottom: 0;
  border-radius: 10rpx 10rpx 0 0;
}

.attr-pop .close {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 30rpx;
  overflow: hidden;
  top: 20rpx;
  color: #999;
}

.attr-pop .close .icon {
  width: 48rpx;
  height: 48rpx;
}

.attr-pop .img-info {
  width: 687.5rpx;
  padding: 30rpx;
  padding-bottom: 0;
}

.c-checked {
  margin-bottom: 38rpx;
  display: flex;
}

.img-info .sub-title {
  font-size: 28rpx;
}

.img-info .c {
  line-height: 56rpx;
}

.c-checked .sub-title {
  min-width: 87rpx;
  display: flex;
}

.c-checked .price_show {
  color: #FF3D3D;
}

.c-checked .price_show text {
  font-size: 40rpx;
  color: #FF3D3D;
  margin-left: 4rpx;
}

.attr-pop .img-box {
  height: 200rpx;
  width: 200rpx;
  background: #f4f4f4;
  margin-right: 69rpx;
  border-radius: 7rpx;
  float: left;
  position: relative;
  overflow: hidden;
}

.img-sub-box {
  position: absolute;
  right: 0;
  top: 0;
  width: 77rpx;
  height: 77rpx;
}

.attr-pop .img {
  border-radius: 7rpx;
  width: 100%;
  height: 100%;
}

.attr-pop .info {
  float: left;
  max-width: 350rpx;
  padding-top: 20rpx;
}

.attr-pop .p {
  font-size: 33rpx;
  color: #333;
  height: 33rpx;
  line-height: 33rpx;
  margin-bottom: 10rpx;
}

.attr-pop .a {
  font-size: 29rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}

.spec-con {
  width: 100%;
  height: 800rpx;
  overflow-y: auto;
  padding: 0 30rpx;
}

.spec-con .name {
  font-size: 29rpx;
  color: #333;
}

.spec-con .values {
  height: auto;
  margin-bottom: 10rpx;
  font-size: 0;
}

.spec-con .value {
  display: inline-block;
  height: 62rpx;
  padding: 0 35rpx;
  line-height: 56rpx;
  text-align: center;
  margin-right: 25rpx;
  margin-bottom: 16.5rpx;
  border: 1px solid #333;
  font-size: 25rpx;
  color: #333;
}

.spec-con .value.disable {
  border: 1px solid #ccc;
  color: #ccc;
}

.spec-con .value.selected {
  border: 1px solid #b4282d;
  color: #b4282d;
}

.number-item .selnum {
  width: 322rpx;
  height: 71rpx;
  border: 1px solid #ccc;
  display: flex;
}

.number-item .title {
  display: flex;
  justify-items: center;
  align-items: center;
}

.number-item {
  display: flex;
  justify-content: space-between;
  justify-items: center;
  margin-bottom: 20rpx;
}

.number-item .cut {
  width: 93.75rpx;
  height: 100%;
  text-align: center;
  line-height: 65rpx;
}

.number-item .number {
  flex: 1;
  height: 100%;
  text-align: center;
  line-height: 68.75rpx;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  float: left;
}

.number-item .add {
  width: 93.75rpx;
  height: 100%;
  text-align: center;
  line-height: 65rpx;
}

.spec-con .title {
  font-size: 28rpx;
  color: #333;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.choose-warp {
  margin-bottom: 40rpx;
}

.choose-list {
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #DDDDDD;
  padding-bottom: 30rpx;
}

.choose-list view {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #333;
  background: #EEEFF1;
  border-radius: 4rpx;
  border: 1rpx solid #EEEFF1;
  padding: 8rpx 36rpx;
  margin-top: 20rpx;
}

.choose-list .active {
  border-color: #CE141C;
  background: #FFF1F1;
  color: #CF131B;
}

.choose-list .no-checked {
  border-color: #F5F5F5;
  background: #F5F5F5;
  color: #CCCCCC;
}

.contact {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  position: fixed;
  bottom: 96rpx;
  right: 10rpx;
  font-size: 20rpx;
  box-sizing: border-box;
  background: url("https://litemall.oss-cn-shenzhen.aliyuncs.com/kefu.png") no-repeat center 21rpx;
  background-size: 55rpx auto;
}

.product-list-checked {
  width: 670rpx;
  margin: auto;
  font-size: 28rpx;
  color: #333333;
  padding: 25rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(231, 137, 141, 1);
  margin-bottom: 30rpx;
}