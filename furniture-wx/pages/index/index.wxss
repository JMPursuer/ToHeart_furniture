.banner {
  width: 710rpx;
  height: 360rpx;
  margin:auto;
  border-radius:8rpx;
}
.banner-image{
  height: 100%;
}
.banner image {
  width: 100%;
  height: 100%;
  border-radius:8rpx;
}

.m-menu {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  padding: 40rpx 0;
}

.m-menu .item {
  flex:1;
}

.m-menu image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 16rpx;
  border: 1rpx solid #dedede;
  border-radius: 100%;
}

.m-menu text {
  display: block;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}

/* ---------------------------轮播--------------------------- */
.banner-new {
  width: 100%;
  padding: 50rpx 0;
  background: #fff;
  margin: 20rpx 0;
}
.swiperClass {
  width: 100%;
  height: 263rpx;
  display: flex;
}
.banner-new .item {
  flex: 1;
}
.banner-new .item .item-li{
  width: 100%;
  height: 100%;
  display: inline-block;
}
.banner-new .item .img{
  max-height: 100%;
  max-width: 100%;
}
/* ---------------------------热销--------------------------- */

.hot-grid {
  width: 750rpx;
  height: 645rpx;
  overflow: hidden;
  background: white;
  margin-top: 20rpx;
}

.hot-grid .h {
  display: inline-block;
  /* flex-flow: row nowrap; */
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  margin-top: 30rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}

.hot-grid .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.hot-grid .b .box {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  margin-top: 40rpx;
}

.hot-grid .b .box .item {
  display: inline-block;
  background: #fff;
  width: 48%;
  height: 236rpx;
  margin-right: 1%;
}

.hot-grid .b .item .item-list{
  height: 100%;
  width: 100%;
  display: inline-block;
  text-align: center;
  position: relative;
}
.hot-grid .item .img {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

/* -----------------------------底线----------------------------- */
.bottom .title{
  position: relative;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.bottom .title::after, .bottom .title::before{
  content: '';
  position: absolute;
  display: inline-block;
  width: 50px;
  height: 3rpx;
  border-radius: 2rpx;
  background: #999;
  top: 0;
  bottom: 0;
  margin: auto;
}
.bottom .title::after{
  left: 25%;
}
.bottom .title::before{
  right: 25%;
}
