page {
  height: 100%;
  background: #f4f4f4;
}

.container {
  padding: 30rpx;
}

.address-box {
  width: 100%;
  background-size: 62.5rpx 10.5rpx;
  margin-bottom: 20rpx;
  padding-top: 10.5rpx;
}

.address-item {
  display: flex;
  padding: 20rpx 24rpx;
  justify-content: space-between;
  background: #fff;
  border-radius: 8rpx;
}

.address-item .mobile {
  margin-left: 22rpx;
}

.address-item .header {
  font-size: 28rpx;
  color: #333;
}

.address-item .right {
  display: flex;
  justify-items: center;
  align-items: center;
  height: auto;
}

.addres-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.address-item .address {
  font-size: 24rpx;
  color: #999;
  width: 520rpx;
  padding-left: 34rpx;
  display: block;
}

.address-item.address-empty {
  line-height: 75rpx;
  text-align: center;
}

.coupon-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.coupon-box .coupon-item {
  width: 100%;
  height: 108.3rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  padding-left: 31.25rpx;
}

.coupon-box .l {
  flex: 1;
  height: 43rpx;
  line-height: 43rpx;
  padding-top: 35rpx;
}

.coupon-box .l .name {
  float: left;
  font-size: 30rpx;
  color: #666;
}

.coupon-box .l .txt {
  float: right;
  font-size: 30rpx;
  color: #666;
}

.coupon-box .r {
  margin-top: 15.5rpx;
  width: 77rpx;
  height: 77rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon-box .r image {
  width: 52.078rpx;
  height: 52.078rpx;
}

.message-box {
  margin-top: 20rpx;
  padding: 20rpx;
  width: 100%;
  height: 110rpx;
  overflow: hidden;
  background: #fff;
}

.message-box .message-item {
  width: 100%;
  height: 100%;
  background: #fff;
  display: inline-block;
  font-size: 28rpx;
}

.order-box {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order-box .order-item {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 104.3rpx;
  background: #fff;
  border-bottom: 1px solid #d9d9d9;
  overflow: hidden;
}

.order-box .order-item .l {
  float: left;
  height: 52rpx;
  width: 50%;
  line-height: 52rpx;
  overflow: hidden;
}

.order-box .order-item .r {
  float: right;
  text-align: right;
  width: 50%;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
}

.order-box .order-item.no-border {
  border-bottom: none;
}

.goods-items {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin-bottom: 120rpx;
  border-radius: 8rpx;
}

.goods-items .item {
  padding: 20rpx 24rpx;
  padding-right: 10rpx;
  border-bottom: 1rpx solid #dedede;
}
.goods-items .item:last-child{
  border-bottom: none;
}
.goods-items .item-warp {
  display: flex;
}

.item-warp .item-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 290rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #333;
  font-weight: 600;
  max-height: 66rpx;
}

.item-warp .info {
  margin: 0 20rpx;
}

.item-warp .item-message {
  margin-top: 26rpx;
  color: #aaa;
  font-size: 24rpx;
  line-height: 33rpx;
  font-weight: 400;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 290rpx;
}

.item-warp .box {
  text-align: right;
  min-width: 140rpx;
}

.item-warp .item-price {
  color: #333;
  font-size: 32rpx;
  height: 44rpx;
  line-height: 44rpx;
}

.item .item-order-price {
  padding-right: 10rpx;
  text-align: right;
  color: #333;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.item-order-price .item-total {
  color: #FF3D3D;
  font-size: 32rpx;
}

.item-warp .item-number {
  color: #aaa;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.goods-items .img image {
  height: 160rpx;
  width: 160rpx;
  border-radius: 8rpx;
}

.order-total {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  text-align: right;
  padding: 15rpx 20rpx;
  background: #fff;
  box-shadow:0px -1rpx 1rpx 0px rgba(204,204,204,1);
}

.order-total .bottom {
  display: inline-block;
  width: 184rpx;
  height: 70rpx;
  background: #CF131B;
  border: 1px solid #CF131B;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-left: 20rpx;
  font-weight: 300;
}
.no-show{
  color:#dedede;
}
