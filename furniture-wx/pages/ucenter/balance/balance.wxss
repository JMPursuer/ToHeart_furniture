/* pages/ucenter/balance/balance.wxss */
.balance-header {
  background: #fff;
  padding: 30rpx 0;
}

.balance-header .box {
  background: url("http://129.204.122.146:61245/rtf7bgomfrv9r5gu81s9.png") no-repeat center center;
  background-size: contain;
  width: 690rpx;
  height: 278rpx;
  margin: 0 auto;
  border-radius: 14rpx;
}

.balance-header .box .content {
  padding: 57rpx 40rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
}
.balance-header .box .content .left{
  flex: 3;
}
.balance-header .box .title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

.balance-header .box .balance-box {
  font-size: 60rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.balance-header .box .balance-box .balance {
  font-size: 60rpx;
  color: #fff;
}
.balance-header .box .buttom-arr{
  margin-left: 43rpx;
  flex: 1;
}
.balance-header .box  .topup {
  font-size: 24rpx;
  color: #fff;
  width: 180rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 34rpx;
  border: 1rpx solid #fff;
  text-align: center;
  margin-bottom: 38rpx;
}

/* 充值流水 */
.balance-content {
  background: #fff;
  padding-top: 70rpx;
}

.balance-content-box {
  width: 690rpx;
  margin: 0rpx auto;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 6px 0px rgba(221, 221, 221, 1);
}

.balance-content .title {
  color: #666666;
  font-size: 32rpx;
  position: relative;
  padding: 20rpx 0;
  padding-left: 28rpx;
}

.balance-content .title::after {
  content: "";
  position: absolute;
  left: 0;
  top: 20rpx;
  display: block;
  width: 8rpx;
  height: 45rpx;
  background: #CF131B;
  border-radius: 4rpx;
}

/* 列表 */
.loading {
  text-align: center;
  padding: 20rpx auto;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid rgba(221, 221, 221, 1);
}

.result-item {
  border-top: 1rpx solid rgba(221, 221, 221, 1);
  padding: 19rpx 28rpx;
}
.bottom {
  margin-top: 10rpx;
}

.result-desc {
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
}

.result-flow {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.result-createTime {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}

.add {
  color: #CF131B;
}

.result-balance {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}

.space-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}