page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.orders-switch {
  /* width: 100%; */
  background: #fff;
  height: 84rpx;
  overflow: auto;
  display: flex;
  flex-wrap: nowrap;

  /* border-bottom: 1px solid rgba(0,0,0,.15); */
}

.orders-switch .item {
  display: inline-block;
  height: 82rpx;
  width: 23%;
  padding: 0 15rpx;
  text-align: center;
}

.orders-switch .item .txt {
  display: inline-block;
  height: 82rpx;
  padding: 0 20rpx;
  line-height: 82rpx;
  color: #9a9ba1;
  font-size: 30rpx;
  width: 170rpx;
}

.orders-switch .item.active .txt {
  color: #CF131B;
  border-bottom: 4rpx solid #CF131B;
}

.no-order {
  width: 100%;
  height: auto;
  margin: 0 auto;
  text-align: center;
}

.no-order .c {
  width: 100%;
  height: auto;
  text-align: center;
}

.no-order .no-order-img {
  width: 268rpx;
  height: 244rpx;
  margin-top: 70rpx;
}

.no-order .c text {
  margin: 0 auto;
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.orders {
  height: auto;
  width: 690rpx;
  overflow: hidden;
  margin: auto;
  margin-bottom: 30rpx;
}

.orders .header-icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 5rpx;
}

.order {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.order .header {
  display: flex;
  justify-content: space-between;
}

.order .header .l {
  color: #999;
  font-size: 24rpx;
  padding-top: 14rpx;
  padding-bottom: 20rpx;
}

.order .header .r {
  color: #CF131B;
  font-size: 28rpx;
  font-weight: 600;
  padding-top: 12rpx;
}

.order .goods {
  display: flex;
  margin-bottom: 30rpx;
}
.order .goods:last-child{
  margin-bottom: 0;
}
.order .goods .img {
  height: 160rpx;
  width: 160rpx;
  background: #f4f4f4;
}

.order .goods .img image {
  height: 160rpx;
  width: 160rpx;
}

.order .goods .info {
  margin: 0 24rpx;
}

.order .goods .name {
  display: -webkit-box;
  width: 100%;
  color: #333;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order .goods .sub-title {
  display: -webkit-box;
  width: 100%;
  color: #aaa;
  margin-top: 16rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order .goods .status {
  width: 105rpx;
  color: #b4282d;
  font-size: 25rpx;
}

.order .goods .b .l {
  color: #333;
  font-size: 32rpx;
}

.order .goods .b .number {
  color: #aaa;
  font-size: 24rpx;
  text-align: right;
}

.order .b .btn {
  margin-top: 19rpx;
  height: 64.5rpx;
  line-height: 64.5rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #fff;
  background: #b4282d;
}

.contact {
  margin: 20rpx 0 0 10rpx;
  width: 100%;
  text-align: right;
}

.contact .contact-warp {
  display: inline-block;
  position: relative;
  border-radius: 25rpx;
  border: 1rpx solid #ccc;
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  margin-right: 10rpx;
}

.contact .active {
  color: #CF1116;
}

.contact-warp text {
  color: #666;
  font-size: 24rpx;
}