page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.profile-info {
  background: url("http://129.204.122.146:61245/mb10h435v8jk076vyup8.png") no-repeat center center;
  background-size: cover;
  color: #fff;
  display: flex;
  padding: 30rpx;
  font-size: 36rpx;
  height: 276rpx;
  padding-top: 45rpx;
}

.profile-info .avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}

.profile-info .info {
  flex: 1;
  height: 85rpx;
  padding-left: 48rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.profile-info .name {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.profile-info .level {
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 10rpx;
  color: #7f7f7f;
  font-size: 30rpx;
}

.user_area {
  /* border: 1px solid black; */
  width: 690rpx;
  margin: auto;
  /* margin: 0 auto; */
  margin-top: -90rpx;
  background: #fff;
  border-radius: 10rpx;

  /* border-top: 1px solid #f4f4f4; */
}

.user_row {
  /* border: 1px solid black; */
  height: 86rpx;
  line-height: 86rpx;
  border-bottom: 1px solid #fafafa;
  display: flex;
  align-items: center;
  /* 元素平均分配 */
  justify-content: space-between;
  padding: 0 20rpx;
}

.user_row_left {
  font-size: 28rpx;
  color: #333;
}

.user_row_right {
  /* border: 1px solid #757575; */
  font-size: 26rpx;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_row_right_icon{
  font-size: 26rpx !important;
  color: #999 !important;
}
.user_column {
  /* border: 1px solid black; */
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  padding-bottom: 46rpx;
}

.user_column_item {
  width: 30%;
  height: 140rpx;
  background: #fff;
  text-align: center;
  position: relative;
  border: none;
  padding: 0;
}

.user_column_item_badge {
  height: 16rpx;
  width: 16rpx;
  position: absolute;
  background: #b4282d;
  color: #fff;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 50rpx;
}

.user_column_item_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.separate {
  background: #e0e3da;
  width: 100%;
  height: 6rpx;
}

.user_column_item_phone {
  width: 30%;
  height: 140rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  float: left;
  background: #fff;
  border-radius: 0;
}

.user_column_item_phone::after {
  border: none;
  border-radius: 0;
}

.logout {
  margin-top: 30rpx;
  height: 100rpx;
  width: 690rpx;
  margin: auto;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  color: #CF131B;
  font-size: 36rpx;
}

.user_column_list {
  width: 690rpx;
  margin: 40rpx auto;
  border-radius:10rpx;
  background: #fff;
}

.user_column_list .user_column_item {
  width: 96%;
  margin: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #333;
  font-size: 26rpx;
  height: 91rpx;
  line-height: 91rpx;
  justify-items: center;
  border-bottom: 1px solid #ddd;
}
.user_column_list .user_column_item:nth-child(4){
  border: none;
}
.user_column_list .user_column_item::after {
  width: 1rpx;
  height: 1rpx;
}
.user_column_list .user_column_item .user_column_item_text {
  height: 85rpx;
  line-height: 85rpx;
}

.user_column_list .user_column_item .user_column_item_image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
  margin-left: 35rpx;
}

.user_column_list .iconicon_right {
  float: right;
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #979797;
}

.user_column_li {
  display: flex;
}

.contact-botton {
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  display: block;
  height: 100%;
  z-index: 99;
}
.user_column_item_flex{
  padding-top: 30rpx;
}
.balance{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}